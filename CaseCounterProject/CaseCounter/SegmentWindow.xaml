<Window x:Class="CaseCounter.SegmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaseCounter"
        xmlns:ScottPlot="clr-namespace:ScottPlot;assembly=ScottPlot.WPF"
        mc:Ignorable="d"
        Title="SegmentWindow" Height="450" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

    <StackPanel Grid.Row ="0" Orientation="Horizontal">


            <Button  Width="100" Click="FindSegments_Click">Find Segments</Button>
            <Button  Width="25" Click="AddSegment_Click">+</Button>
            <Button  Width="25" Click="RemoveSegment_Click" >-</Button>
        </StackPanel>


        <ScottPlot:WpfPlot Grid.Row="1" Name="wpfPlot3"/>
    </Grid>
</Window>
