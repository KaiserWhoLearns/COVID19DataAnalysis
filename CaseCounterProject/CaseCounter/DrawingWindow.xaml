<Window x:Class="CaseCounter.DrawingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaseCounter"
        mc:Ignorable="d"
        Title="DrawingWindow" Height="1300" Width="2600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Margin="10,0,0,0" Click="Query1_Click">Query 1</Button>
            <Button Margin="10,0,0,0" Click="Query2_Click">Query 2</Button>
            <Button Margin="10,0,0,0" Click="Query3_Click">Query 3</Button>
            <Button Margin="10,0,0,0" Click="Query4_Click">Query 4</Button>
            <Button Margin="10,0,0,0" Click="Query5_Click">Query 5</Button>
            <Button Margin="10,0,0,0" Click="Query6_Click">Query 6</Button>
            <Button Margin="10,0,0,0" Click="Query7_Click">Query 7</Button>
            <Button Margin="10,0,0,0" Click="Query8_Click">Query 8</Button>
            <Button Margin="10,0,0,0" Click="Query9_Click">Query 9</Button>
        </StackPanel>

        <Canvas Grid.Row="1"  Width="2400" Height="1200" x:Name="drawingCanvas"/>
    </Grid>
</Window>
